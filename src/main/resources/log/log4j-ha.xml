<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//log4j/log4j Configuration//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" threshold="null" debug="false">
	
	<appender name="accountAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/cop-ha/account.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%p][%d{yyyy-MM-dd HH:mm:ss}]-[%m]%n" />
		</layout>
	</appender>

	<logger name="account-log" additivity="false">
		<level value="INFO" />
		<appender-ref ref="accountAppender" />
	</logger>
	
	<appender name="rootAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="data/applogs/carmonitor/root.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%p][%d{HH:mm:ss}][%c]-[%m]%n" />
		</layout>
	</appender>
	
	<root>
		<level value="INFO" />
		<appender-ref ref="rootAppender" />
	</root> 
	
</log4j:configuration>